{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "jsx": "react-native",

    "strict": false,                       
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",                          
    "paths": {
      "@/*": ["*"],          
      "@src/*": ["src/*"],  
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
